{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowListMyBuckets",
            "Effect": "Allow",
            "Action": "s3:ListAllMyBuckets",
            "Resource": "*"
        },
        {
            "Sid": "AllowListSpecificBuckets",
            "Effect": "Allow",
            "Action": "s3:ListBucket",
            "Resource": [
                "arn:aws:s3:::cloudlaunch-assignment-site-bucket",
                "arn:aws:s3:::cloudlaunch-assignment-private-bucket",
                "arn:aws:s3:::cloudlaunch-assignment-visible-only-bucket"
            ]
        },
        {
            "Sid": "AllowGetSiteObjectsOnly",
            "Effect": "Allow",
            "Action": "s3:GetObject",
            "Resource": "arn:aws:s3:::cloudlaunch-assignment-site-bucket/*"
        },
        {
            "Sid": "AllowPrivateBucketReadWriteOnly",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject"
            ],
            "Resource": "arn:aws:s3:::cloudlaunch-assignment-private-bucket/*"
        },
        {
            "Sid": "AllowReadOnlyVpcConsoleView",
            "Effect": "Allow",
            "Action": "ec2:Describe*",
            "Resource": "*"
        }
    ]
}